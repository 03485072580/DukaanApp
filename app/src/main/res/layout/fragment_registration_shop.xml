<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/dukaanLogo"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:background="@color/colorPrimary"
                    android:padding="20dp">

                    <RelativeLayout
                        android:id="@+id/logoshop"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/round_circle_white_circle"
                        android:padding="2dp">

                        <ImageView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:padding="2dp"
                            android:src="@drawable/logo_shopping" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/xt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/logoshop"
                        android:layout_toRightOf="@+id/logoshop"
                        android:paddingBottom="10dp"
                        android:text="D"
                        android:textColor="@color/white"
                        android:textSize="48sp"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/xt"
                        android:layout_toRightOf="@+id/xt"
                        android:text="ukaan App"
                        android:textColor="@color/white"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/userRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dukaanLogo"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="@string/shop_registration"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_24sp" />


                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/userRegistration"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/round_edits"
                    android:ems="10"
                    android:hint="@string/first_name"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/first_name"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/round_edits"
                    android:ems="10"
                    android:hint="@string/last_name"
                    android:inputType="textPersonName"
                    android:paddingStart="@dimen/_5dp"
                    android:paddingLeft="@dimen/_5dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/last_name"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/round_edits"
                    android:ems="10"
                    android:hint="@string/shopName"
                    android:inputType="textPersonName"
                    android:paddingStart="@dimen/_5dp"
                    android:paddingLeft="@dimen/_5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/username"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/round_edits"
                    android:ems="10"
                    android:hint="@string/shopAddress"
                    android:inputType="textPersonName"
                    android:paddingStart="@dimen/_5dp"
                    android:paddingLeft="@dimen/_5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/address"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/round_edits"
                    android:ems="10"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_5dp"
                    android:paddingLeft="@dimen/_5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/email"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/round_edits"
                    android:ems="10"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_5dp"
                    android:paddingLeft="@dimen/_5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/optionalMallID"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/password"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/round_edits"
                    android:ems="10"
                    android:hint="@string/mallID"
                    android:inputType="text"
                    android:paddingStart="@dimen/_5dp"
                    android:paddingLeft="@dimen/_5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/signUp"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_below="@+id/optionalMallID"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/round_button_circle_base"
                    android:clickable="true"
                    android:foreground="@drawable/repple_effect_trs_overal"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_button"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <ProgressBar
                        android:id="@+id/registerProgress"
                        style="@style/MyProgressBarStyle"
                        android:layout_width="@dimen/_56dp"
                        android:layout_height="@dimen/_56dp"
                        android:indeterminateTint="@color/white"
                        android:visibility="gone" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>